<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/thumb_image_message_receiver"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_profile"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="1dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_text_message_receiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/thumb_image_message_receiver"
        android:text="i love you"
        android:textSize="16dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_time_message_receiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_text_message_receiver"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/tv_text_message_receiver"
        android:text="11:00"
        android:textSize="14dp"
        android:visibility="invisible"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/thumb_image_message"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_profile"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="1dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_text_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@+id/thumb_image_message"
        android:text="i love you"
        android:textSize="16dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_time_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_text_message"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@+id/thumb_image_message"
        android:text="11:00"
        android:textSize="14dp"
        android:visibility="invisible" />
</RelativeLayout>